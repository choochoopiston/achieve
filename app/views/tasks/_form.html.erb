
<%= form_for([@user, @task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.each do |attribute, message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.hidden_field :user_id %>
  </div>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_area :content, :class => "form-control", :rows => "7" %>
  </div>
  <div class="form-group">
    <%= f.label :deadline %><br>
    <%= f.datetime_select :deadline, :use_month_numbers => true %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :charge_id %>
  </div>
  <div class="form-group">
    <%= f.label :status %><br>
    <%= f.select :status, [["未着手","0"],["対応開始済み","1"]] %>
  </div>
  <div class="form-group">
    <%= f.label :完了チェック %><br>
    <%= f.check_box :done %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
